{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row pt-4">
            <div class="col-md-2"></div>
            <div class="col-md-8">

                {{ form_start(registrationForm) }}
                <h1>Регистрация</h1>
                <div class="mb-3">
                    <label for="label" class="form-label">Имя и Фамилия</label>
                    {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control', 'id': 'label'}}) }}
                </div>
                <div class="mb-3">
                    <label for="label" class="form-label">Email</label>
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'id': 'label'}}) }}
                </div>

                    {{ form_widget(registrationForm.plainPassword) }}
                <button class="btn mt-2 btn-primary" type="submit">
                    Зарегестрироваться
                </button>
                <div class="col-md-2"></div>
                {{ form_end(registrationForm) }}
            </div>
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
